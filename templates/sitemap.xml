<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ BASE_URL }}/</loc>
        <lastmod>{{ today }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/engineer/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/resume/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>1.0</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/pilot/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/hobbies/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/projects/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/work-experience/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ BASE_URL }}/posts/</loc>
        <lastmod>{{ recently }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>1</priority>
    </url>
    <!-- all pages -->
    {%- for post in posts %}
    <url>
        <loc>{{ BASE_URL }}/{{ post.path }}/</loc>
        <lastmod>{{ post.date }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>1</priority>
    </url>
    {%- endfor %}
</urlset>